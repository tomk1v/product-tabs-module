<?xml version="1.0"?>
<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Webapi:etc/webapi.xsd">
    <route url="/V1/product_tabs/tabs" method="POST">
        <service class="Internship\ProductTabs\Api\ProductTabsRepositoryInterface"
                 method="save"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/product_tabs/tabs/:id" method="DELETE">
        <service class="Internship\ProductTabs\Api\ProductTabsRepositoryInterface"
                 method="deleteById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/product_tabs/tabs/:id" method="GET">
        <service class="Internship\ProductTabs\Api\ProductTabsRepositoryInterface"
                 method="getById"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
    <route url="/V1/product_tabs/tabs" method="GET">
         <service class="Internship\ProductTabs\Api\ProductTabsRepositoryInterface"
                 method="getList"/>
        <resources>
            <resource ref="anonymous"/>
        </resources>
    </route>
</routes>
