<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="internship_product_tabs" resource="default" engine="innodb" comment="Internship Product Tabs">
        <column xsi:type="smallint" name="entity_id" padding="6" unsigned="false" nullable="false" identity="true" comment="ID"/>
        <column xsi:type="boolean" name="status" nullable="false" comment="Status"/>
        <column xsi:type="varchar" name="tab_name" nullable="false" length="25" comment="Tab Name"/>
        <column xsi:type="varchar" name="description" nullable="false" length="255" comment="Tab Descrition"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP" comment="Creation Time"/>
        <column xsi:type="timestamp" name="updated_at" nullable="false" default="CURRENT_TIMESTAMP" on_update="true" comment="Update Time"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
    </table>
</schema>
